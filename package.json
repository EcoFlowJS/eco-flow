{
  "name": "eco-flow",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "build": "nx run-many --target=build",
    "watch:api": "cd ./packages/api && npm run watch",
    "watch:cli": "cd ./packages/cli && npm run watch",
    "watch:database": "cd ./packages/database && npm run watch",
    "watch:helpers": "cd ./packages/helpers && npm run watch",
    "watch:types": "cd ./packages/types && npm run watch",
    "watch:utils": "cd ./packages/utils && npm run watch",
    "watch:ecoflow": "cd ./packages/ecoflow && npm run watch",
    "editor:start:admin": "cd ./editors/admin-panel && npm run dev",
    "editor:start:flow": "cd ./editors/flow-editor && npm run dev",
    "editor:start:schema": "cd ./editors/schema-editor && npm run dev",
    "editor:start:errors": "cd ./editors/error-components && npm run dev",
    "ediotr:start": "concurrently \"npm run editor:start:errors\" \"npm run editor:start:flow\" \"npm run editor:start:schema\" \"npm run editor:start:admin\"",
    "prewatch": "npm run build",
    "watch": "concurrently \"npm run watch:cli\" \"npm run watch:types\" \"npm run watch:utils\" \"npm run watch:ecoflow\" \"npm run watch:api\" \"npm run watch:database\" \"npm run watch:helpers\"",
    "dev:backend": "nodemon ./run.ts",
    "dev:frontend": "npm run ediotr:start",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\""
  },
  "workspaces": [
    "packages/*",
    "packages/*/*",
    "editors/*",
    "editors/*/*"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1",
    "nx": "16.9.1",
    "nx-cloud": "latest",
    "ts-node": "^10.9.1"
  },
  "keywords": []
}
